#!/usr/bin/env perl

for (@ARGV) {
    $_ =~ s/\\./ /g; # get rid of escaped items like \b in "\bhello\b", so that "hello" is used.
    @tokens = (@tokens, $_);
}

$tokens = join(" ", @tokens);

use String::ShellQuote;
$tokens = shell_quote($tokens);

$tokens = qx/beagrep-break-words $tokens/;

$tokens =~ s/\r|\n/ /g;
$tokens =~ s/\b/*/g;
print "$tokens\n";



